<% content_for :title, "Background Job Status - Ragdoll Engine Demo" %>

<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1><i class="fas fa-tasks"></i> Background Job Status</h1>
      <%= link_to "Back to Documents", documents_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <!-- Processing Statistics -->
    <div class="card mb-4">
      <div class="card-header">
        <h5><i class="fas fa-chart-bar"></i> Processing Statistics</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-3">
            <div class="card bg-warning text-white" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#pendingJobsModal">
              <div class="card-body text-center">
                <i class="fas fa-clock fa-2x mb-2"></i>
                <h3><%= @processing_stats[:pending] %></h3>
                <p class="mb-0">Pending</p>
                <% if @processing_stats[:pending] > 0 %>
                  <small class="d-block mt-1">Click to manage</small>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card bg-primary text-white">
              <div class="card-body text-center">
                <i class="fas fa-spinner fa-2x mb-2"></i>
                <h3><%= @processing_stats[:processing] %></h3>
                <p class="mb-0">Processing</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card bg-success text-white">
              <div class="card-body text-center">
                <i class="fas fa-check-circle fa-2x mb-2"></i>
                <h3><%= @processing_stats[:processed] %></h3>
                <p class="mb-0">Processed</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card bg-danger text-white">
              <div class="card-body text-center">
                <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                <h3><%= @processing_stats[:failed] %></h3>
                <p class="mb-0">Failed</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="card">
      <div class="card-header">
        <h5><i class="fas fa-history"></i> Recent Activity</h5>
      </div>
      <div class="card-body">
        <% if @recent_activity.any? %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Document</th>
                  <th>Status</th>
                  <th>Type</th>
                  <th>Last Updated</th>
                </tr>
              </thead>
              <tbody>
                <% @recent_activity.each do |document| %>
                  <tr>
                    <td>
                      <%= link_to document_path(document), class: "text-decoration-none" do %>
                        <strong><%= document.title || "Untitled Document" %></strong>
                        <% if document.description.present? %>
                          <br><small class="text-muted"><%= truncate(document.description, length: 80) %></small>
                        <% end %>
                      <% end %>
                    </td>
                    <td>
                      <% case document.status %>
                      <% when 'pending' %>
                        <span class="badge bg-warning text-dark">
                          <i class="fas fa-clock"></i> Pending
                        </span>
                      <% when 'processing' %>
                        <span class="badge bg-primary">
                          <i class="fas fa-spinner fa-spin"></i> Processing
                        </span>
                      <% when 'processed' %>
                        <span class="badge bg-success">
                          <i class="fas fa-check-circle"></i> Processed
                        </span>
                      <% when 'failed' %>
                        <span class="badge bg-danger">
                          <i class="fas fa-exclamation-triangle"></i> Failed
                        </span>
                      <% else %>
                        <span class="badge bg-secondary">
                          <%= document.status.humanize %>
                        </span>
                      <% end %>
                    </td>
                    <td>
                      <span class="badge bg-info">
                        <%= document.document_type || "Unknown" %>
                      </span>
                    </td>
                    <td>
                      <small class="text-muted">
                        <%= time_ago_in_words(document.updated_at) %> ago
                      </small>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
            <h5>No Recent Activity</h5>
            <p class="text-muted">No documents have been processed recently.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <!-- System Status -->
    <div class="card mb-4">
      <div class="card-header">
        <h5><i class="fas fa-server"></i> System Status</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-12 mb-3">
            <div class="d-flex justify-content-between">
              <span>Background Jobs:</span>
              <span class="badge bg-success">Active</span>
            </div>
          </div>
          <div class="col-12 mb-3">
            <div class="d-flex justify-content-between">
              <span>Total Documents:</span>
              <strong><%= @processing_stats.values.sum %></strong>
            </div>
          </div>
          <div class="col-12">
            <div class="d-flex justify-content-between">
              <span>Success Rate:</span>
              <strong>
                <% total = @processing_stats.values.sum %>
                <% if total > 0 %>
                  <%= number_to_percentage((@processing_stats[:processed].to_f / total) * 100, precision: 1) %>
                <% else %>
                  N/A
                <% end %>
              </strong>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="card">
      <div class="card-header">
        <h5><i class="fas fa-bolt"></i> Quick Actions</h5>
      </div>
      <div class="card-body">
        <%= link_to documents_path, class: "btn btn-outline-primary btn-sm d-block mb-2" do %>
          <i class="fas fa-list"></i> View All Documents
        <% end %>
        <%= link_to new_document_path, class: "btn btn-outline-success btn-sm d-block mb-2" do %>
          <i class="fas fa-plus"></i> Add New Document
        <% end %>
        <button class="btn btn-outline-secondary btn-sm d-block" onclick="location.reload()">
          <i class="fas fa-sync"></i> Refresh Status
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  // Auto-refresh the page every 30 seconds if there are pending or processing jobs
  <% if @processing_stats[:pending] > 0 || @processing_stats[:processing] > 0 %>
    setTimeout(function() {
      location.reload();
    }, 30000);
  <% end %>
</script>

<!-- Pending Jobs Modal -->
<div class="modal fade" id="pendingJobsModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <i class="fas fa-clock text-warning"></i> 
          Manage Pending Jobs (<%= @processing_stats[:pending] %>)
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <% if @solid_queue_jobs.any? %>
          <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            <strong>Note:</strong> These are actual queued jobs from the background processor. 
            Canceling jobs will prevent new documents from being created.
          </div>
          
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
              <strong>Showing <%= @solid_queue_jobs.count %> pending jobs</strong>
            </div>
            <div>
              <button class="btn btn-sm btn-danger" onclick="cancelAllJobs()">
                <i class="fas fa-trash"></i> Cancel All Pending Jobs
              </button>
            </div>
          </div>
          
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Job ID</th>
                  <th>Job Class</th>
                  <th>Queued At</th>
                  <th>Waiting Time</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% @solid_queue_jobs.each do |job| %>
                  <tr>
                    <td>
                      <code><%= job.id %></code>
                    </td>
                    <td>
                      <span class="badge bg-primary">
                        <%= job.class_name %>
                      </span>
                    </td>
                    <td>
                      <small class="text-muted">
                        <%= job.created_at.strftime("%m/%d/%Y %I:%M %p") %>
                      </small>
                    </td>
                    <td>
                      <small class="text-warning">
                        <%= time_ago_in_words(job.created_at) %>
                      </small>
                    </td>
                    <td>
                      <span class="badge bg-warning text-dark">
                        <i class="fas fa-clock"></i> Queued
                      </span>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
            <h5>No Pending Jobs</h5>
            <p class="text-muted">All jobs are currently being processed or completed.</p>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <% if @solid_queue_jobs.any? %>
          <button type="button" class="btn btn-primary" onclick="location.reload()">
            <i class="fas fa-sync"></i> Refresh
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
// Pending Jobs Management Functions
function cancelAllJobs() {
  const totalJobs = <%= @processing_stats[:pending] %>;
  
  if (!confirm(`Are you sure you want to cancel ALL ${totalJobs} pending jobs? This will permanently remove them from the queue and they cannot be recovered.`)) {
    return;
  }
  
  fetch('<%= cancel_pending_documents_path %>', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
    },
    body: JSON.stringify({
      cancel_all: true
    })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      alert(data.message);
      location.reload();
    } else {
      alert('Error: ' + data.error);
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Failed to cancel all jobs');
  });
}
</script>